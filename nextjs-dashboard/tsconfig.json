{
  "compilerOptions": {
    "target": "ESNext",                  // Use the latest JavaScript features
    "lib": ["dom", "dom.iterable", "esnext"], // Include DOM and ESNext libraries
    "allowJs": true,                     // Allow JavaScript files
    "skipLibCheck": true,                // Skip type checking for declaration files
    "strict": true,                      // Enable all strict type-checking options
    "noEmit": true,                      // Prevent emitting compiled files
    "esModuleInterop": true,             // Enable CommonJS interop for ES modules
    "module": "ESNext",                  // Use ES module syntax for imports/exports
    "moduleResolution": "Node",          // Resolve modules in Node.js style
    "resolveJsonModule": true,           // Allow importing JSON files
    "isolatedModules": true,             // Required for Next.js projects
    "jsx": "preserve",                   // Preserve JSX syntax for Next.js
    "incremental": true,                 // Enable incremental compilation
    "baseUrl": ".",                      // Set the base URL for module resolution
    "paths": {
      "@/*": ["./*"]                     // Alias for root-level imports
    },
    "plugins": [
      {
        "name": "next"                   // Next.js-specific plugin
      }
    ]
  },
  "include": [
    "next-env.d.ts",                     // Include Next.js environment types
    "**/*.ts",                           // Include all TypeScript files
    "**/*.tsx",                          // Include all React TypeScript files
    ".next/types/**/*.ts",               // Include Next.js types
    "app/lib/placeholder-data.ts",       // Specific file to include
    "scripts/seed.js"                    // Specific script to include
  ],
  "exclude": [
    "node_modules"                       // Exclude dependencies folder
  ]
}
